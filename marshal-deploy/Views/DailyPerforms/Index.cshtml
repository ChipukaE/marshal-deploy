@model IEnumerable<marshal_deploy.Models.DailyPerform>
@{ ViewBag.Title = "Daily Performance"; } @if (TempData["ErrorMessage"] !=
null)
{
    <div id="notification" class="error">@TempData["ErrorMessage"]</div>
}
<style>
    .error {
        background-color: #ffdddd;
        color: #ff0000;
        padding: 10px;
        margin-bottom: 10px;
    }

    .btn.btn-success a {
        color: white;
        text-decoration: none;
        margin-bottom: auto;
    }

    .dropdown-item {
        display: flex;
        align-items: center;
    }

        .dropdown-item i {
            margin-right: 5px;
        }
</style>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">@ViewBag.Title</h5>
                </div>
                <div class="card-body">
                    <div class="btn btn-success">
                        @Html.ActionLink("Create New", "Create")
                    </div>

                    <table class="table datatable-basic table-striped" width="100%">
                        <thead>
                            <tr>

                                <th>@Html.DisplayNameFor(model => model.UserId)</th>
                                @*<th>@Html.DisplayNameFor(model => model.TargetZW)</th>
                                <th>@Html.DisplayNameFor(model => model.TargetUSD)</th>
                                <th>@Html.DisplayNameFor(model => model.TotalCountedZW)</th>
                                <th>@Html.DisplayNameFor(model => model.TotalCountedUSD)</th>*@
                                <th>@Html.DisplayNameFor(model => model.PerformanceZW)</th>
                                <th>@Html.DisplayNameFor(model => model.PerformanceUSD)</th>
                                <th>@Html.DisplayNameFor(model => model.Average)</th>
                                <th>@Html.DisplayNameFor(model => model.Rating)</th>
                                <th>@Html.DisplayNameFor(model => model.IsDeleted)</th>
                                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">

                                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                                    @*<td>@Html.DisplayFor(modelItem => item.TargetZW)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TargetUSD)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalCountedZW)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalCountedUSD)</td>*@
                                    <td>@Html.DisplayFor(modelItem => item.PerformanceZW)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PerformanceUSD)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Average)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                                    @if (item.IsDeleted == true)
                                    {
                                        <td class="hidden-phone">
                                            <span class="badge badge-flat border-success text-success-600 ml-2">Yes</span>
                                        </td>

                                    }
                                    else
                                    {

                                        <td class="hidden-phone">
                                            <span class="badge badge-flat border-danger text-danger-600 ml-2">No</span>
                                        </td>
                                    } @if (item.IsActive == true)
                                    {

                                        <td class="hidden-phone">
                                            <span class="badge badge-flat border-success text-success-600 ml-2">Yes</span>
                                        </td>

                                    }
                                    else
                                    {

                                        <td class="hidden-phone">
                                            <span class="badge badge-flat border-danger text-danger-600 ml-2">No</span>
                                        </td>
                                    }
                                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>

                                    <td class="text-center">
                                        <div class="list-icons">
                                            <div class="dropdown">
                                                <a href="#"
                                                   class="list-icons-item"
                                                   data-toggle="dropdown">
                                                    <i class="icon-menu9"></i>
                                                </a>

                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a href="#" class="dropdown-item">
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.id })
                                                    </a>
                                                    <a href="#" class="dropdown-item">
                                                        @Html.ActionLink("Details", "Details", new
                                                        {
                                                            id =
                                                        item.id
                                                        })
                                                    </a>
                                                    <a href="#" class="dropdown-item">
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



