@model IEnumerable<marshal_deploy.Models.DailyPerform>
@{ ViewBag.Title = "Daily Performance Details"; }

<!-- Content area -->
<div class="content">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Daily Performance Details</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>

        <!-- Daily Performance details table -->
        <table class="table datatable-responsive">
            <thead>
                <tr>
                    
                    <th>UserId</th>
                    <th>TargetZW</th>
                    <th>TargetUSD</th>
                    <th>TotalCountedZW</th>
                    <th>TotalCountedUSD</th>
                    <th>PerformanceZW</th>
                    <th>PerformanceUSD</th>
                    <th>Average</th>
                    <th>Rating</th>
                    <th>IsDeleted</th>
                    <th>IsActive</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dailyPerform in Model)
                {
                    <tr>
                       
                        <td>@Html.DisplayFor(model => dailyPerform.UserId)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.TargetZW)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.TargetUSD)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.TotalCountedZW)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.TotalCountedUSD)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.PerformanceZW)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.PerformanceUSD)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.Average)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.Rating)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.IsDeleted)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.IsActive)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.CreatedAt)</td>
                        <td>@Html.DisplayFor(model => dailyPerform.UpdatedAt)</td>
                        <td class="text-center">
                            <div class="list-icons">
                                <div class="dropdown">
                                    <a href="#" class="list-icons-item" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a href="#" class="dropdown-item"><i class="icon-file-pdf"></i>PDF</a>
                                        <a href="#" class="dropdown-item"><i class="icon-file-excel"></i>CSV</a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- /Daily Performance details table -->
    </div>
    <!-- /card -->
</div>
<!-- /content area -->

@section Scripts { @Scripts.Render("~/bundles/jqueryval")

<script src="~/Content/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
<script src="~/Content/global_assets/js/plugins/tables/datatables/extensions/responsive.min.js"></script>
<script src="~/Content/global_assets/js/plugins/forms/selects/select2.min.js"></script>

<script src="~/Content/global_assets/js/demo_pages/datatables_responsive.js"></script>
}

