@model IEnumerable<marshal_deploy.Models.PrecinctMonthly>
@{ ViewBag.Title = "PrecinctMonthly Details"; }

<!-- Content area -->
<div class="content">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">PrecinctMonthly Details</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>

        <!-- PrecinctMonthly details table -->
        <table class="table datatable-responsive">
            <thead>
                <tr>
                    <th>Precinct</th>
                    <th>ZoneId</th>
                    <th>Collected</th>
                    <th>Performance</th>
                    @*
                        <th>Variance</th>
                    *@
                    <th>Rating</th>
                    <th>Cluster</th>
                    <th>IsDeleted</th>
                    <th>IsActive</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var precinctMonthly in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => precinctMonthly.Precinct.PrecinctName)
                        </td>
                        <td>@Html.DisplayFor(model => precinctMonthly.ZoneId)</td>
                        <td>@Html.DisplayFor(model => precinctMonthly.Collected)</td>
                        <td>@Html.DisplayFor(model => precinctMonthly.Performance)</td>
                        @*
                            <td>@Html.DisplayFor(model => precinctMonthly.Variance)</td>
                        *@
                        <td>@Html.DisplayFor(model => precinctMonthly.Rating)</td>
                        <td>
                            @Html.DisplayFor(model => precinctMonthly.Cluster.ClusterName)
                        </td>
                        <td>@Html.DisplayFor(model => precinctMonthly.IsDeleted)</td>
                        <td>@Html.DisplayFor(model => precinctMonthly.IsActive)</td>
                        <td>@Html.DisplayFor(model => precinctMonthly.CreatedAt)</td>
                        <td>@Html.DisplayFor(model => precinctMonthly.UpdatedAt)</td>
                        <td class="text-center">
                            <div class="list-icons">
                                <div class="dropdown">
                                    <a href="#" class="list-icons-item" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a href="#" class="dropdown-item"><i class="icon-file-pdf"></i>PDF</a>
                                        <a href="#" class="dropdown-item"><i class="icon-file-excel"></i>CSV</a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- /PrecinctMonthly details table -->
    </div>
    <!-- /card -->
</div>
<!-- /content area -->

@section Scripts { @Scripts.Render("~/bundles/jqueryval")

<script src="~/Content/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
<script src="~/Content/global_assets/js/plugins/tables/datatables/extensions/responsive.min.js"></script>
<script src="~/Content/global_assets/js/plugins/forms/selects/select2.min.js"></script>

<script src="~/Content/global_assets/js/demo_pages/datatables_responsive.js"></script>
}

