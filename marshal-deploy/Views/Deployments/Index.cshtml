@model IEnumerable<marshal_deploy.Models.Deployment>
@{ ViewBag.Title = "Deployments"; }



<style>
    .btn.btn-success a {
        color: white;
        text-decoration: none;
        margin-bottom: auto;
    }

    .dropdown-item {
        display: flex;
        align-items: center;
    }

        .dropdown-item i {
            margin-right: 5px;
        }
</style>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">@ViewBag.Title</h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload"></a>
                            <a class="list-icons-item" data-action="remove"></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="btn btn-success">
                        @Html.ActionLink("Create New", "Create")
                    </div>

                    <table class="table datatable-responsive">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.UserId)</th>
                                <th>@Html.DisplayNameFor(model => model.Precinct.PrecinctName)</th>
                                <th>@Html.DisplayNameFor(model => model.Zone.ZoneName)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                            <tr class="odd gradeX">
                                <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Precinct.PrecinctName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Zone.ZoneName)</td>

                                <td class="text-center">
                                    <div class="list-icons">
                                        <div class="dropdown">
                                            <a href="#"
                                               class="list-icons-item"
                                               data-toggle="dropdown">
                                                <i class="icon-menu9"></i>
                                            </a>

                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="#" class="dropdown-item">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.id });
                                                </a>
                                                <a href="#" class="dropdown-item">
                                                    @Html.ActionLink("Details", "Details", new { id = item.id });
                                                </a>
                                                <a href="#" class="dropdown-item">
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.id });
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                                                                                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { @Scripts.Render("~/bundles/jqueryval")

<script src="~/Content/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
<script src="~/Content/global_assets/js/plugins/tables/datatables/extensions/responsive.min.js"></script>
<script src="~/Content/global_assets/js/plugins/forms/selects/select2.min.js"></script>

<script src="~/Content/global_assets/js/demo_pages/datatables_responsive.js"></script>
}
